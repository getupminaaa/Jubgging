<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Jubgging_Renewal" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/green_blue</item>
        <item name="colorPrimaryVariant">@color/green_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lightish_blue</item>
        <item name="colorSecondaryVariant">@color/lightish_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@android:color/black</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="signUpUserTextTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/pretendard_medium</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="signUpUserInputTextTheme" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/pretendard_medium</item>
        <item name="android:textAlignment">textStart</item>
    </style>
    <style name="signUpNoticeTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/red</item>
        <item name="fontFamily">@font/pretendard_regular</item>
        <item name="android:textAlignment">textStart</item>
    </style>
    <style name="signUpTimerTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/red</item>
        <item name="fontFamily">@font/pretendard_semibold</item>
        <item name="android:textAlignment">textStart</item>
    </style>
</resources>